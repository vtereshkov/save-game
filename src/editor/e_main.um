        if (putSimpleButton(editor, rect.mk(position.x, position.y, 80, rectangle.h), "Load").isReleased) {
          editorLoadWorld(editor, editor.currentPortal)
        }

        position.x -= 120
      }
    }
  }
  editor.endTool()
